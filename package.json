{
  "name": "lore-designer",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:desktop": "cd apps/desktop && bun run dev",
    "dev:docs": "cd apps/docs && bun run dev",
    "build:desktop": "cd apps/desktop && bun run build",
    "build:docs": "cd apps/docs && bun run build",
    "preview:docs": "cd apps/docs && bun run preview",
    "start:docs": "cd apps/docs && bun run start",
    "shadcn": "cd apps/desktop && bunx --bun shadcn-vue@latest",
    "astro": "cd apps/docs && bun run astro"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.1",
    "@types/bun": "latest",
    "@types/node": "^24.3.1"
  },
  "peerDependencies": {
    "typescript": "^5.8.3"
  }
}
