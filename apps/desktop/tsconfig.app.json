{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*"
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@modules/*": ["./src/modules/*"],
      "@common/*": ["./src/modules/common/*"],
      "@wizard/*": ["./src/modules/wizard/*"],
      "@editor/*": ["./src/modules/editor/*"]
    }
  }
}
