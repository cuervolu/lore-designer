{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "ignorePatterns": [
    "**/node_modules",
    ".lock",
    ".git",
    ".vscode",
    "dist",
    "build",
    ".idea",
    "crates/**",
    "target/**"
  ],
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "lineWidth": 100,
    "indentStyle": "space"
  }
}
