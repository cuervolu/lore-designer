{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ui:dev",
      "type": "shell",
      "isBackground": true,
      "command": "pnpm",
      "args": ["vite:dev"],
      "options": {
        "cwd": "${workspaceFolder}/apps/desktop"
      },
      "problemMatcher": {
        "pattern": {
          "regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
          "file": 1,
          "location": 2,
          "severity": 3,
          "code": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".*",
          "endsPattern": ".*ready in.*"
        }
      }
    },
    {
      "label": "ui:build",
      "type": "shell",
      "command": "pnpm",
      "args": ["vite:build"],
      "options": {
        "cwd": "${workspaceFolder}/apps/desktop"
      }
    },
    {
      "label": "rust:build-debug",
      "type": "cargo",
      "command": "build",
      "args": ["--manifest-path=apps/desktop/src-tauri/Cargo.toml"],
      "problemMatcher": ["$rustc"]
    },
    {
      "label": "rust:build-release",
      "type": "cargo",
      "command": "build",
      "args": [
        "--release",
        "--manifest-path=apps/desktop/src-tauri/Cargo.toml"
      ],
      "problemMatcher": ["$rustc"]
    },
    {
      "label": "dev:windows",
      "dependsOn": ["rust:build-debug", "ui:dev"],
      "dependsOrder": "parallel",
      "problemMatcher": []
    }
  ]
}
