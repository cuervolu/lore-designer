{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "cppvsdbg",
      "request": "launch",
      "name": "Tauri Dev Debug (Windows)",
      "program": "${workspaceFolder}/apps/desktop/src-tauri/target/debug/lore_designer.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/apps/desktop",
      "environment": [
        {
          "name": "RUST_BACKTRACE",
          "value": "1"
        },
        {
          "name": "RUST_LOG",
          "value": "warn,lore_designer_lib=trace"
        }
      ],
      "preLaunchTask": "dev:windows"
    },
    {
      "type": "cppvsdbg",
      "request": "launch",
      "name": "Tauri Prod Debug (Windows)",
      "program": "${workspaceFolder}/apps/desktop/src-tauri/target/release/lore_designer.exe",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}/apps/desktop",
      "preLaunchTask": "rust:build-release"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Tauri Dev Debug (Unix)",
      "cargo": {
        "args": [
          "build",
          "--manifest-path=./apps/desktop/src-tauri/Cargo.toml",
          "--no-default-features"
        ],
        "env": {
          "RUST_BACKTRACE": "1",
          "RUST_LOG": "warn,lore_designer_lib=trace"
        }
      },
      "cwd": "${workspaceFolder}/apps/desktop",
      "preLaunchTask": "ui:dev"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Tauri Prod Debug (Unix)",
      "cargo": {
        "args": [
          "build",
          "--release",
          "--manifest-path=./apps/desktop/src-tauri/Cargo.toml"
        ]
      },
      "cwd": "${workspaceFolder}/apps/desktop",
      "preLaunchTask": "ui:build"
    }
  ]
}
